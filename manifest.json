{
  "manifest_version": 3,
  "name": "Moctale Quick Access",
  "version": "1.0.0",
  "description": "Search movies and view ratings from Moctale without leaving your tab",

  "permissions": [
    "storage",
    "scripting",
    "contextMenus"
  ],

  "host_permissions": [
    "https://www.moctale.in/*",
    "https://moctale.in/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://www.moctale.in/*", "https://moctale.in/*"],
      "js": ["scripts/contentScript.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
